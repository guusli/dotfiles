[alias]
    # one-line log
    l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short

    a = add
    ap = add -p
    c = commit --verbose
    ca = commit -a --verbose
    cm = commit -m
    cam = commit -a -m
    m = commit --amend --verbose
    s = status

    d = diff
    ds = diff --stat
    dc = diff --cached
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    co = checkout
    cob = checkout -b
    rb = rebase
    prb = pull --rebase
    rba = rebase --abort
    rbc = rebase --continue
	
    u = pull --rebase --autostash
    
    # list branches sorted by last modified
    b = "!git for-each-ref --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)' refs/heads | sed -e 's-refs/heads/--'"
    
    purge = "!git branch | grep -v "master" | xargs git branch -D"

    # list aliases
    ls-alias = "!git config -l | grep alias | cut -c 7-"
[core]
	excludesfile = /Users/gustavlindberg/.gitignore_global
	editor = vim
	pager = diff-so-fancy | less --tabs=4 -RFX
	trustExitCode = true
[user]
	name = Gustav Lindberg
	email = gustav@gustavlindberg.se
[merge]
	tool = opendiff
[diff]
	tool = opendiff
[commit]
	template = ~/.gitmessage
[push]
	 default = current
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[include]
    path = .gitconfig.local

[includeIf "gitdir:~/code/"]
	path = ~/.gitconfig.code
